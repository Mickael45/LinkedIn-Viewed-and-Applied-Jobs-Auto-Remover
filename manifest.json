{
    "manifest_version": 3,
    "name": "LinkedIn Viewed and Applied Jobs Auto Remover",
    "version": "1.0",
    "permissions": [
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.linkedin.com/jobs/collections/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/collections/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}